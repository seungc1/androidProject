<?xml version="1.0" encoding="utf-8"?>
<!--
  [파일 6/11] - '내비게이션 지도'
  '하단 툴바'의 버튼 ID와 '두뇌'(Fragment) 파일들을
  '연결'하고, '시작 화면'을 지정합니다.
-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home"> <!-- (★핵심★) 시작 화면을 '홈'으로 지정 -->

    <!-- 1. '홈' 화면 -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.androidproject.presentation.main.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- 2. '기록' 화면 -->
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.androidproject.presentation.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history_placeholder" />

    <!-- 3. '개인정보' 화면 -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.androidproject.presentation.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile_placeholder" />

</navigation>