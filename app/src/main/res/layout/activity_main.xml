<?xml version="1.0" encoding="utf-8"?>
<!--
  [파일 1/3] - 9차 수정본
  'tools:context'의 경로를 님의 프로젝트 구조에 맞게
  '.presentation.MainActivity'에서 '.MainActivity'로 수정했습니다.
  경로: res/layout/activity_main.xml
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"> <!-- (수정) 님의 실제 MainActivity 경로 -->

    <!--
      '홈', '기록', '개인정보' 화면이
      표시될 메인 컨텐츠 영역(문틀)입니다.
    -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--
      (주석) FragmentContainerView 태그가 여기서 닫혔습니다.
      'app:navGraph'는 '연결성'에 해당하므로,
      '화면 구성' 단계에서는 주석으로 처리합니다.
    -->
    <!-- app:navGraph="@navigation/nav_graph" -->


    <!--
      님이 요청하신 하단 툴바 (기록, 홈, 개인정보)입니다.
    -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        />
    <!-- (수정) BottomNavigationView 태그가 여기서 닫혔습니다. -->

</androidx.constraintlayout.widget.ConstraintLayout>