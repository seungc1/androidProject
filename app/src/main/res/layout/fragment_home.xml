<?xml version="1.0" encoding="utf-8"?>
<!--
  [파일 3/5] - 10차 수정본
  '식단 목록' RecyclerView의
  android:nestedScrollingEnabled="false" 속성에서
  잘못된 따옴표(" ")를 제거하여 '문법 오류'를 수정했습니다.
-->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.main.HomeFragment"> <!-- '홈' 화면 '두뇌' 경로 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- 로딩 상태를 표시할 ProgressBar -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- 1. '운동 to-do 리스트'를 위한 '둥근 칸' (CardView) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exerciseCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dietCard"
            app:layout_constraintVertical_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 1. 운동 to-do 리스트 섹션 -->
                <TextView
                    android:id="@+id/exerciseTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오늘의 운동 (to-do 리스트)"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
                <!-- (수정) '너무 작은' 스타일 -> '크고' '정상적인' 스타일 -->

                <!-- 운동 목록을 보여줄 RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/exerciseRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_exercise"
                    tools:itemCount="3" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 2. '추천 식단'을 위한 '둥근 칸' (CardView) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dietCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/exerciseCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 2. 추천 식단 섹션 -->
                <TextView
                    android:id="@+id/dietTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI 추천 식단"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />
                <!-- (수정) '너무 작은' 스타일 -> '크고' '정상적인' 스타일 -->

                <!-- 식단 목록을 보여줄 RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dietRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_diet"
                    tools:itemCount="2" />
                <!-- (수정) "false" -> false (따옴표 제거) -->
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>